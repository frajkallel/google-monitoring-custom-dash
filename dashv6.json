{
  "category": "CUSTOM",
  "dashboardFilters": [
    {
      "filterType": "RESOURCE_LABEL",
      "labelKey": "cluster",
      "stringValue": "",
      "templateVariable": "cluster"
    },
    {
      "filterType": "METRIC_LABEL",
      "labelKey": "exported_namespace",
      "stringValue": "",
      "templateVariable": "namespace"
    },
    {
      "filterType": "METRIC_LABEL",
      "labelKey": "node",
      "stringValue": "",
      "templateVariable": "node"
    }
  ],
  "displayName": "dashv6",
  "labels": {},
  "mosaicLayout": {
    "columns": 12,
    "tiles": [
      {
        "height": 2,
        "widget": {
          "scorecard": {
            "sparkChartView": {
              "sparkChartType": "SPARK_LINE"
            },
            "thresholds": [],
            "timeSeriesQuery": {
              "prometheusQuery": "sum(kube_deployment_status_replicas{${cluster},${namespace}})"
            }
          },
          "title": "node replicas"
        },
        "width": 4,
        "xPos": 0,
        "yPos": 0
      },
      {
        "height": 2,
        "widget": {
          "scorecard": {
            "gaugeView": {
              "lowerBound": 0,
              "upperBound": 100
            },
            "thresholds": [
              {
                "color": "RED",
                "direction": "ABOVE",
                "label": "",
                "value": 95
              },
              {
                "color": "YELLOW",
                "direction": "ABOVE",
                "label": "",
                "value": 80
              }
            ],
            "timeSeriesQuery": {
              "prometheusQuery": "100*sum(kube_pod_container_resource_requests{${cluster},${node},resource=\"memory\"}) / sum(kube_node_status_allocatable{${cluster},${node},resource=\"memory\"})"
            }
          },
          "title": "RAM request in %"
        },
        "width": 4,
        "xPos": 4,
        "yPos": 0
      }
    ]
  }
}